<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.gdlgxy.internshipcommunity.module.basepaging.PagingTabData" />

        <variable
            name="lifeCycleOwner"
            type="androidx.lifecycle.LifecycleOwner" />

        <variable
            name="pagingTabData"
            type="PagingTabData" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10">

        <include
            layout="@layout/layout_feed_author"
            app:user="@{pagingTabData.author}"/>

        <include
            layout="@layout/layout_feed_text"
            app:lines="@{3}"
            app:feedText="@{pagingTabData.feeds_text}"/>

        <!--   图片区域-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_5">

            <ImageView
                android:id="@+id/fragment_base_type_0_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.card.MaterialCardView>


            <include
                layout="@layout/layout_feed_tag"
                app:tagText="@{pagingTabData.activityText}" />

            <include
                layout="@layout/layout_feed_top_comment"
                app:comment="@{pagingTabData.topComment}" />

            <include
                android:id="@+id/interaction_binding"
                layout="@layout/layout_feed_interaction"
                app:lifeCycleOwner="@{lifeCycleOwner}"
                app:pagingTabData="@{pagingTabData}" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>