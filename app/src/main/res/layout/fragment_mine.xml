<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_user"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingEnd="22dp"
                android:paddingStart="22dp">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@{user.name}"
                    android:textColor="#1C2C2A"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_user_phone"
                    app:layout_constraintStart_toEndOf="@id/iv_user_icon"
                    app:layout_constraintTop_toTopOf="@id/iv_user_icon"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="登录" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{user.description}"
                    android:textColor="#801C2C2A"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_user_icon"
                    app:layout_constraintStart_toStartOf="@id/tv_user_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                    tools:text="**********" />

                <com.gdlgxy.internshipcommunity.widget.PPImageView
                    android:id="@+id/iv_user_icon"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/icon_user"
                    app:image_url="@{user.avatar}"
                    app:isCircle="@{true}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:radius="@{0}"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_overlap"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/color_white"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@{StringConvert.convertSpannable(user.likeCount,@string/like_count)}"
                        android:textColor="@color/color_666"
                        tools:text="100\n获赞"/>

                    <TextView
                        android:id="@+id/fans_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@{StringConvert.convertSpannable(user.followerCount,@string/fans_count)}"
                        android:textColor="@color/color_666"
                        tools:text="100\n粉丝"/>


                    <TextView
                        android:id="@+id/follow_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@{StringConvert.convertSpannable(user.followCount,@string/follow_count)}"
                        android:textColor="@color/color_666"
                        tools:text="100\n关注"/>


                    <TextView
                        android:id="@+id/score_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@{StringConvert.convertSpannable(user.score,@string/score_count)}"
                        android:textColor="@color/color_666"
                        tools:text="1000\n粉丝"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.gdlgxy.internshipcommunity.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_icon="@drawable/ic_profile_my_post"
                app:setting_item_title="我的帖子" />

            <com.gdlgxy.internshipcommunity.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_icon="@drawable/ic_profile_my_comment"
                app:setting_item_title="我的评论" />

            <com.gdlgxy.internshipcommunity.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_icon="@drawable/icon_history"
                app:setting_item_title="@string/setting_item_history" />

            <com.gdlgxy.internshipcommunity.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_icon="@drawable/icon_collection"
                app:setting_item_title="@string/setting_item_collection" />

            <com.gdlgxy.internshipcommunity.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_icon="@drawable/icon_subscribe"
                app:setting_item_title="@string/setting_item_subscribe" />

            <com.gdlgxy.internshipcommunity.widget.SettingItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setting_item_icon="@drawable/icon_setting"
                app:setting_item_title="@string/setting_item_setting" />

        </LinearLayout>

    <data>

        <import type="com.gdlgxy.internshipcommunity.util.StringConvert" />

        <variable
            name="user"
            type="com.gdlgxy.internshipcommunity.module.basepaging.User" />
    </data>
</layout>